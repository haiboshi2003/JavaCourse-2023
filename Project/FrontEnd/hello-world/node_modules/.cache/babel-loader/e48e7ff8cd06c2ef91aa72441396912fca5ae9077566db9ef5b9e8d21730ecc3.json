{"ast":null,"code":"import { defineComponent } from 'vue';\nimport axios from \"@/api/request\";\nimport { message } from \"ant-design-vue\";\nexport default defineComponent({\n  name: \"SelectUserModal\",\n  props: [\"showModal\", \"handleOk\", \"handleCancel\"],\n  data() {\n    return {\n      innerShowModel: this.showModal,\n      searchWord: \"\",\n      dataSource: [],\n      columns: [{\n        title: '身份证号/社会信用号码',\n        dataIndex: 'id'\n      }, {\n        title: '名称',\n        dataIndex: 'name'\n      }, {\n        title: '选择',\n        dataIndex: 'choose'\n      }],\n      selected: null\n    };\n  },\n  mounted() {\n    axios.get(\"http://118.25.19.55:9901/customer?current=1&size=10000\").then(r => {\n      console.log(r);\n      this.dataSource = r.data;\n    }).catch(() => {\n      message.error(\"系统错误，请稍后再试\");\n    });\n  },\n  methods: {\n    checked(index) {\n      return index === this.selected;\n    }\n  },\n  computed: {\n    dataSourceFiltered() {\n      if (this.searchWord === \"\") {\n        return this.dataSource;\n      } else {\n        return this.dataSource.filter(v => v.id.startsWith(this.searchWord));\n      }\n    }\n  },\n  watch: {\n    innerShowModel(value) {\n      this.$emit('update:showModal', value);\n    },\n    showModal(value) {\n      this.innerShowModel = value;\n    }\n  }\n});","map":{"version":3,"names":["defineComponent","axios","message","name","props","data","innerShowModel","showModal","searchWord","dataSource","columns","title","dataIndex","selected","mounted","get","then","r","console","log","catch","error","methods","checked","index","computed","dataSourceFiltered","filter","v","id","startsWith","watch","value","$emit"],"sources":["H:\\GitHub-Repository\\hengsheng\\hello-world\\src\\components\\Business\\Tools\\SelectUserModal.vue"],"sourcesContent":["<script>\r\nimport {defineComponent} from 'vue'\r\nimport axios from \"@/api/request\";\r\nimport {message} from \"ant-design-vue\";\r\n\r\nexport default defineComponent({\r\n  name: \"SelectUserModal\",\r\n  props: [\"showModal\", \"handleOk\", \"handleCancel\"],\r\n  data() {\r\n    return {\r\n      innerShowModel: this.showModal,\r\n      searchWord: \"\",\r\n      dataSource: [],\r\n      columns: [\r\n        {\r\n          title: '身份证号/社会信用号码',\r\n          dataIndex: 'id',\r\n        },\r\n        {\r\n          title: '名称',\r\n          dataIndex: 'name',\r\n        },\r\n        {\r\n          title: '选择',\r\n          dataIndex: 'choose',\r\n        },\r\n      ],\r\n      selected: null\r\n    }\r\n  },\r\n  mounted() {\r\n    axios.get(\"http://118.25.19.55:9901/customer?current=1&size=10000\").then(r => {\r\n      console.log(r)\r\n      this.dataSource = r.data;\r\n    }).catch(() => {\r\n      message.error(\"系统错误，请稍后再试\")\r\n    })\r\n  },\r\n  methods: {\r\n    checked(index) {\r\n      return index === this.selected;\r\n    },\r\n  },\r\n  computed: {\r\n    dataSourceFiltered() {\r\n      if (this.searchWord === \"\") {\r\n        return this.dataSource;\r\n      } else {\r\n        return this.dataSource.filter((v) => v.id.startsWith(this.searchWord));\r\n      }\r\n    }\r\n  },\r\n  watch:{\r\n    innerShowModel(value){\r\n      this.$emit('update:showModal', value);\r\n    },\r\n    showModal(value){\r\n      this.innerShowModel = value;\r\n    }\r\n  }\r\n})\r\n</script>\r\n\r\n<template>\r\n  <div>\r\n    <a-modal v-model:open=\"innerShowModel\" title=\"选择用户\" centered @ok=\"handleOk\" :width=\"800\">\r\n      <template #footer>\r\n        <a-button key=\"back\" @click=\"handleCancel\">取消</a-button>\r\n        <a-button key=\"submit\" type=\"primary\" @click=\"handleOk(this.dataSource[this.selected])\" :disabled=\"this.selected===null\">确认</a-button>\r\n      </template>\r\n\r\n      <a-input v-model:value=\"searchWord\" style=\"width: 300px\" placeholder=\"搜索身份证号或法人代码\"></a-input>\r\n\r\n      <div class=\"tb-container\">\r\n        <a-table :columns=\"columns\" :data-source=\"dataSourceFiltered\" rowKey=\"id\" bordered>\r\n          <template #bodyCell=\"{ column, text, index }\">\r\n            <template v-if=\"['id','name'].includes(column.dataIndex)\">\r\n              <div>\r\n                {{ text }}\r\n              </div>\r\n            </template>\r\n            <template v-else>\r\n              <a-radio :checked=\"checked(index)\" @click=\"this.selected=index\"/>\r\n            </template>\r\n          </template>\r\n        </a-table>\r\n      </div>\r\n\r\n    </a-modal>\r\n  </div>\r\n</template>\r\n\r\n<style scoped>\r\n.tb-container {\r\n  margin: 20px 0;\r\n}\r\n</style>"],"mappings":"AACA,SAAQA,eAAe,QAAO,KAAI;AAClC,OAAOC,KAAI,MAAO,eAAe;AACjC,SAAQC,OAAO,QAAO,gBAAgB;AAEtC,eAAeF,eAAe,CAAC;EAC7BG,IAAI,EAAE,iBAAiB;EACvBC,KAAK,EAAE,CAAC,WAAW,EAAE,UAAU,EAAE,cAAc,CAAC;EAChDC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,cAAc,EAAE,IAAI,CAACC,SAAS;MAC9BC,UAAU,EAAE,EAAE;MACdC,UAAU,EAAE,EAAE;MACdC,OAAO,EAAE,CACP;QACEC,KAAK,EAAE,aAAa;QACpBC,SAAS,EAAE;MACb,CAAC,EACD;QACED,KAAK,EAAE,IAAI;QACXC,SAAS,EAAE;MACb,CAAC,EACD;QACED,KAAK,EAAE,IAAI;QACXC,SAAS,EAAE;MACb,CAAC,CACF;MACDC,QAAQ,EAAE;IACZ;EACF,CAAC;EACDC,OAAOA,CAAA,EAAG;IACRb,KAAK,CAACc,GAAG,CAAC,wDAAwD,CAAC,CAACC,IAAI,CAACC,CAAA,IAAK;MAC5EC,OAAO,CAACC,GAAG,CAACF,CAAC;MACb,IAAI,CAACR,UAAS,GAAIQ,CAAC,CAACZ,IAAI;IAC1B,CAAC,CAAC,CAACe,KAAK,CAAC,MAAM;MACblB,OAAO,CAACmB,KAAK,CAAC,YAAY;IAC5B,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACPC,OAAOA,CAACC,KAAK,EAAE;MACb,OAAOA,KAAI,KAAM,IAAI,CAACX,QAAQ;IAChC;EACF,CAAC;EACDY,QAAQ,EAAE;IACRC,kBAAkBA,CAAA,EAAG;MACnB,IAAI,IAAI,CAAClB,UAAS,KAAM,EAAE,EAAE;QAC1B,OAAO,IAAI,CAACC,UAAU;MACxB,OAAO;QACL,OAAO,IAAI,CAACA,UAAU,CAACkB,MAAM,CAAEC,CAAC,IAAKA,CAAC,CAACC,EAAE,CAACC,UAAU,CAAC,IAAI,CAACtB,UAAU,CAAC,CAAC;MACxE;IACF;EACF,CAAC;EACDuB,KAAK,EAAC;IACJzB,cAAcA,CAAC0B,KAAK,EAAC;MACnB,IAAI,CAACC,KAAK,CAAC,kBAAkB,EAAED,KAAK,CAAC;IACvC,CAAC;IACDzB,SAASA,CAACyB,KAAK,EAAC;MACd,IAAI,CAAC1B,cAAa,GAAI0B,KAAK;IAC7B;EACF;AACF,CAAC"},"metadata":{},"sourceType":"module","externalDependencies":[]}